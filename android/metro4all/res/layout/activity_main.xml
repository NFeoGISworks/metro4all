<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lvButtList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:footerDividersEnabled="true"
        />

    <Button
        android:id="@+id/btSearch"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/search_button_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/search_button_margin"
        android:background="@drawable/btn_selector"
        android:text="@string/sSearch"
        android:textColor="@color/btn_selector"/>

    <ImageView
        android:id="@+id/ivLimitations"
        android:layout_width="@dimen/search_button_height"
        android:layout_height="@dimen/search_button_height"
        android:layout_above="@id/btSearch"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/search_button_margin"
        android:layout_marginRight="@dimen/search_button_margin"
        android:background="@drawable/btn_selector"/>


</RelativeLayout>
