<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Application" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/metro_material_main</item>
        <item name="colorPrimaryDark">@color/metro_material_status</item>
        <item name="colorAccent">@color/metro_material_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorLink">@color/metro_material_main</item>

        <item name="editTextColor">@android:color/black</item>
        <item name="android:spinnerItemStyle">@style/Theme.Application.Spinner</item>
        <item name="android:spinnerDropDownItemStyle">@style/Widget.AppCompat.Light.DropDownItem.Spinner</item>
    </style>

    <style name="Theme.Application.Spinner" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>

    <style name="Theme.Settings" parent="@style/Theme.Application">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.Toolbar.NavButton</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
    </style>

    <style name="Theme.Settings.Limitations" parent="@style/Theme.Settings">
        <!--<item name="colorAccent">@android:color/white</item>-->
        <item name="colorControlActivated">@android:color/white</item>
        <item name="switchStyle">@style/Theme.Widget.Switch</item>
        <item name="colorSwitchThumbNormal">@color/metro_material_dark</item>
        <item name="android:colorForeground">@color/metro_material_dark</item>
    </style>

    <style name="Theme.Widget.Switch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <!--<item name="android:tint">@android:color/white</item>-->
        <!--<item name="buttonTint">@color/switch_selector</item>-->
        <!--<item name="colorAccent">@android:color/white</item>-->
        <!--<item name="track">@drawable/abc_switch_thumb_material</item>-->
        <!--<item name="android:thumb">@drawable/limitations_switch_thumb</item>-->
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="Widget.Toolbar.NavButton" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>
