<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corners_shadow_radius"/>
            <solid android:color="@color/metro_material_dark"/>
        </shape>
    </item>
    <item
        android:bottom="@dimen/button_bottom_shadow">
        <shape android:shape="rectangle">
            <solid android:color="@color/metro_material_main"/>
            <padding
                android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:top="@dimen/button_padding"/>
            <corners android:radius="@dimen/button_corners_radius"/>
        </shape>
    </item>

</layer-list>